<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<groupId>se.l4.dust</groupId>
	<artifactId>dust-base</artifactId>
	<version>0.3-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>${project.artifactId}</name>

	<modules>
		<module>dust-core</module>

		<module>dust-jaxrs</module>
		<module>dust-jaxrs-resteasy</module>

		<module>dust-validation</module>

		<module>dust-js-env</module>
		<module>dust-js-uglify</module>
		<module>dust-js-closure</module>
		<module>dust-js-templates</module>
		<module>dust-js-coffeescript</module>

		<module>dust-css-sprites</module>
		<module>dust-css-less</module>

		<module>dust-yui</module>

		<module>dust-jrebel</module>
	</modules>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<repositories>
		<repository>
			<id>jboss</id>
			<name>JBoss</name>
			<url>http://repository.jboss.org/nexus/content/groups/public-jboss/</url>
		</repository>
		<repository>
			<id>crayon-releases</id>
			<name>Crayon Releases</name>
			<url>http://crayon-java.googlecode.com/svn/repository/releases</url>
		</repository>
	</repositories>

	<properties>
		<resteasy-version>2.1.0.GA</resteasy-version>
		<crayon-version>0.5</crayon-version>
	</properties>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
		 		<groupId>junit</groupId>
		 		<artifactId>junit</artifactId>
		 		<version>4.9</version>
		 		<scope>test</scope>
		 	</dependency>
		</dependencies>
	</dependencyManagement>

	<scm>
		<connection>scm:git:git@github.com:aholstenson/dust.git</connection>
		<url>scm:git:git@github.com:aholstenson/dust.git</url>
		<developerConnection>scm:git:git@github.com:aholstenson/dust.git</developerConnection>
	</scm>
</project>

